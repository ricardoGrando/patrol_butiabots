<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<!-- properties (constants) -->
	<xacro:property name="M_PI" value="3.14159" />
	<!-- right/left hubcap + wheel -->
	<xacro:macro name="patrolbot_wheel" params="suffix parent reflect">
		<!-- wheel -->
		<link name="patrolbot_${suffix}_wheel">
			<inertial>
				<mass value="0.5" />
				<origin xyz="0 0 0" />
				<inertia ixx="0.012411765597" ixy="0" ixz="0" iyy="0.015218160428" iyz="0" izz="0.011763977943" />
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry name="patrolbot_geom">
					<mesh filename="package://patrolbot_description/meshes/${suffix}_wheel.stl" />
				</geometry>
				<material name="WheelBlack"></material>
			</visual>
			<collision>
				<origin xyz="0 0 0" rpy="${-3.1415927/2} 0 0" />
				<geometry>
					<!--<mesh filename="package://patrolbot_description/meshes/${suffix}_wheel.stl"/> -->
					<cylinder radius="0.09" length="0.01" />
				</geometry>
			</collision>
		</link>
		<joint name="base_${suffix}_hubcap_joint" type="fixed">
			<origin xyz="0 0 0" rpy="0 0 0" />
			<parent link="patrolbot_${suffix}_wheel" />
			<child link="patrolbot_${suffix}_hubcap" />
		</joint>
		<!-- hubcap -->
		<link name="patrolbot_${suffix}_hubcap">
			<inertial>
				<mass value="0.01" />
				<origin xyz="0 0 0" />
				<inertia ixx="0.012411765597" ixy="0" ixz="0" iyy="0.015218160428" iyz="0" izz="0.011763977943" />
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry name="patrolbot_geom">
					<mesh filename="package://patrolbot_description/meshes/${suffix}_hubcap.stl" />
				</geometry>
				<material name="HubcapYellow"></material>
			</visual>
			<collision>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry>
					<box size="0.00001 0.00001 0.00001" />
				</geometry>
			</collision>
		</link>
		<joint name="base_${suffix}_wheel_joint" type="continuous">
			<axis xyz="0 1 0" />
			<anchor xyz="0 0 0" />
			<limit effort="100" velocity="100" />
			<joint_properties damping="0.0" friction="0.0" />
			<origin xyz="0 ${reflect*0.215} 0.091" rpy="0 0 0" />
			<parent link="base_link" />
			<child link="patrolbot_${suffix}_wheel" />
		</joint>
		<!-- gazebo elements -->
		<transmission name="${parent}_${suffix}_wheel_trans">
			<type>pr2_mechanism_model/SimpleTransmission</type>
			<joint name="base_${suffix}_wheel_joint">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="base_${suffix}_wheel_motor">
				<hardwareInterface>EffortJointInterface</hardwareInterface>
				<mechanicalReduction>${reflect * 624/35 * 80/19}</mechanicalReduction>
			</actuator>
		</transmission>
		<gazebo reference="patrolbot_${suffix}_hubcap">
			<material>Gazebo/Yellow</material>
		</gazebo>
		<gazebo reference="patrolbot_${suffix}_wheel">
			<material>Gazebo/Black</material>
			<mu1>0.5</mu1>
			<mu2>50.0</mu2>
			<kp>100000000.0</kp>
			<kd>1.0</kd>
		</gazebo>
	</xacro:macro>
</robot>